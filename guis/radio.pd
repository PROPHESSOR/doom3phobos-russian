windowDef rdialog_contacts {
	rect	0,0,640,480
	visible ("gui::rdialog_container" == 0)
	
	
	windowDef call_sam {
		noevents	0
		rect	0,320,640,20
		visible 1
		textscle	0.4
		textalign	1
		text		"Позвонить Сэму"

		onAction {
			set "gui::radioname" "idAI_sam_42" ; // the entity name of who we're going to call
			set	"cmd"	"callonradio" ;
		}
		onMouseEnter {
			set "call_sam::forecolor" "1 0.5 1 1" ;
		}
		onMouseExit {
			set "call_sam::forecolor" "1 1 1 1" ;
		}
	}
}
	
