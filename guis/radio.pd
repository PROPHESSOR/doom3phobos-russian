windowDef Close {
	rect 10, 20, 100, 20
	text "Закрыть"
	background	"guis/assets/e1m3/backstuff.tga"
	matcolor .8, .4, .4, 1
	
	onMouseEnter
	{
		transition "matcolor" ".8 .4 .4 1" "1 .4 .4 1" "200";
	}
	
	onMouseExit
	{
		transition "matcolor" "1 .4 .4 1" ".8 .4 .4 1" "200";
	}
	
	OnAction
	{
		transition "RadioScreen::rect" "0 0 640 480" "400" "-640 0 640 480";
	}
}

